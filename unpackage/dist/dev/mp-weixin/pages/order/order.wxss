.carts {
  width: 100%;
}
.carts .scroll {
  background-color: #DCDCDC;
  height: calc(100vh - 50px);
}
.carts .scroll .cart-item {
  background-color: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  border-bottom: 1px solid #eee;
}
.carts .scroll .cart-item .check {
  width: 60rpx;
}
.carts .scroll .cart-item .active {
  color: red;
}
.carts .scroll .cart-item .info {
  width: 690rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  height: 100px;
}
.carts .scroll .cart-item .info .desc-img {
  width: 200rpx;
  height: 100px;
}
.carts .scroll .cart-item .info .desc-img image {
  width: 100%;
  height: 100%;
}
.carts .scroll .cart-item .info .word-info {
  width: 490rpx;
  margin-left: 6px;
}
.carts .scroll .cart-item .info .word-info .title text {
  font-size: 16px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.carts .scroll .cart-item .info .word-info .count {
  margin-top: 40px;
  height: 22px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.carts .scroll .cart-item .info .word-info .count .num {
  position: absolute;
  right: 30px;
}
.carts .bo-bar {
  height: 50px;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.carts .bo-bar .check-all {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.carts .bo-bar .check-all .check {
  width: 60rpx;
}
.carts .bo-bar .check-all .active {
  color: red;
}
.carts .bo-bar .check-all text {
  line-height: 50px;
  text-align: center;
}
.carts .bo-bar .check-all .co {
  margin-left: 40px;
}
.carts .bo-bar .count-all {
  width: 80px;
  position: absolute;
  right: 0;
  line-height: 50px;
  text-align: center;
  background-color: red;
}

