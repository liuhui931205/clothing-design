.detail {
  background-color: #eee;
  width: 100%;
}
.detail .scroll {
  height: calc(100vh - 100px);
  overflow: hidden;
}
.detail .scroll .swiper {
  height: 750rpx;
}
.detail .scroll .swiper .swiper-item {
  width: 100%;
  height: 100%;
}
.detail .scroll .swiper .swiper-item image {
  width: 100%;
  height: 100%;
}
.detail .scroll .header-info {
  margin-top: 8px;
  height: 100px;
  width: 100%;
  padding: 15px;
  background-color: #fff;
  border-radius: 5px;
}
.detail .scroll .header-info .title {
  font-size: 16px;
}
.detail .scroll .header-info .price text:nth-child(2) {
  margin-left: 8px;
  font-size: 8px;
  color: black;
  text-decoration: line-through;
}
.detail .scroll .header-info .sell {
  font-size: 6px;
  color: #A9A9A9;
}
.detail .scroll .prd-style {
  width: 100%;
  background-color: #fff;
  font-size: 15px;
  margin: 8px 0;
  border-radius: 5px;
}
.detail .scroll .prd-style .colors .check {
  padding: 15px;
  margin-left: 34px;
}
.detail .scroll .prd-style .colors text {
  margin-left: 15px;
}
.detail .scroll .prd-style .sizes .check {
  margin-left: 34px;
}
.detail .scroll .prd-style .sizes text {
  margin-left: 15px;
}
.detail .scroll .prd-detail .header {
  background-color: #fff;
  height: 50px;
  line-height: 50px;
  font-size: 18px;
  text-align: center;
}
.detail .scroll .prd-detail .img-item {
  width: 100%;
}
.detail .scroll .prd-detail .img-item image {
  width: 100%;
}
.detail .nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}

